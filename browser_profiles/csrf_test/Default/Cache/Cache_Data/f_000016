	<script type="text/javascript">


var limitMiliSecond = 120000;
var interval, startTimer;

var isCertificated = false;


(function($){
	startTimer = function (countdown) {
	    var timer   = countdown,
	    	endTime = new Date();
	    
	    endTime.setSeconds(endTime.getSeconds() + timer);
	    var endTimeSeconds = endTime.getTime();
	    
	    
	    clearInterval(interval);
	    
	    $("#btnCertKeyConfirm").addClass("active");
	    $("#inputCertKey").prop("readonly", false).val("");
	    
	    interval = setInterval(function () {
	    	timer = Math.floor((endTimeSeconds - new Date().getTime())/1000);
	    	
	        displaykeyinTime(timer);

	        if (timer <= 0) {
	        	displaykeyinTime(0);
	            clearInterval(interval);
	            
	            $("#btnCertKeyConfirm").removeClass("active");
	            $("#inputCertKey").prop("readonly", true);
	        }
	    }, 1000);
	};
	
	function displaykeyinTime(time) {
		var minutes = parseInt(time / 60, 10),
        	seconds = parseInt(time % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        $("#countDown").text(minutes + ":" + seconds);
	}
	
	function initialCaptcha() {
		$("#botCaptcha_CaptchaIconsDiv").css("display", "none !important");
	}
	
	$(document).ready(function(){

		var loginBg = $.cookie("loginBg");
    	
   		if(loginBg != undefined){
   			$("div#block-login").attr("style", 'background-image: url(https://ezportal.bizmeka.com/companyImage/' + loginBg.replace("s", "") +') !important; background-size: cover !important;');
   		}
   		
		displaykeyinTime(Math.floor(limitMiliSecond/1000));
		
		$('#certKey').focus();
		
		initialCaptcha();
		
		$("ul.nav-tabs3 a").on("click", function (e) {
			e.preventDefault();
			
			if($(this).parent().hasClass("disabled")) {
				alert("인증번호 로그인을 위한 핸드폰 번호 및 이메일 정보가 없어 인증번호 로그인을 이용할 수 없습니다.");
			} else {
				$(this).tab("show");
			}
		})
		
		
		
		$("form").submit(function() {
			var $input = $("input[name=certKey], input[name=answerData]", this),
				val = $input.val();
			
			if(val.length == 6) {
				$("body").loading();
				
				if($("input[name=captchaId]", this).is("*")) {	// chptcha 인증이면
					var captcha = $("#answerData").get(0).Captcha;
					$("input[name=captchaId]", this).val(captcha.Id);
					$("input[name=instanceId]", this).val(captcha.InstanceId);
				} else {
					if(!isCertificated) {
						alert("인증번호를 확인해주세요.");
						return false;
					}
				}
				
				this.submit();
			} else {
				alert("6자리로 입력해 주세요.");
			}
		});
		
		$("a[name=btnSubmit]").click(function(event) {
			var $form = $(this).closest("form");
			$("#bannerUrl").val("");
			$form.submit();
		});
		
		$("#inputCertKey, #answerData").keypress( function(event) {
			if(event.which == 13) {
				if($(this).attr("id") == "inputCertKey") {
					$("#btnCertKeyConfirm").click();
				} else {
 					$(this).closest("form").submit();
				}
 				
 				return false;
			}
		});
		
		$("#btnSendMobile, #btnSendMail").click(function(){
			isCertificated = false;
			
			var isMail = $(this).attr("id") == "btnSendMail";
			
			var startDate = new Date();
			$.get(isMail ? "/sendCertKeyToMail.do" : "/sendCertKeyToMobile.do")
				.done(function(result) {
					if(result.res != 0) {
						alert(result.msg);
						if(result.res == -1) {
							location.replace("/loginForm.do");
						}
					} else {
						var endDate = new Date();
						var second = Math.floor((limitMiliSecond - (endDate.getTime() - startDate.getTime())) / 1000);
						
						startTimer(second);
						alert(isMail ? "ki*****@g****.com으로 발송하였습니다." : "010****9497으로 발송하였습니다.");
					}
				})
				.fail(function(xhr) {
					var json = $.parseJSON(xhr.responseText);
					alert(json.errMsg);
				});
		});
		
		$("#btnCertKeyConfirm").click(function() {
			if($(this).hasClass("active")) {
				var val = $("#inputCertKey").val();
				if(val.length != 6) {
					alert("6자리로 입력해 주세요.");
					return false;
				}
				
				$("body").loading();
				$.get("/confirmCertKey.do", {certKey:val})
					.done(function(result) {
						if(result.res != 0) {
							alert(result.msg);
							if(result.res == -1) {
								location.replace("/loginForm.do");
							}
						}else{
							isCertificated = true;
							
							clearInterval(interval);
				            
				            $("#btnCertKeyConfirm").removeClass("active");
				            $("#inputCertKey").prop("readonly", true);
				            
				            alert("인증번호가 일치합니다. 로그인 해주세요.");
						} 
					}).fail(function(xhr) {
						var json = $.parseJSON(xhr.responseText);
						alert(json.errMsg);
					}).always(function() {
						$("body").loaded();
					});
			} else {
				alert("핸드폰 또는 이메일로 인증번호 받기를 해주세요.");
			}
		});
		
		$("#captchaBtnReload").click(function(event) {
			event.preventDefault();
			$("#answerData").get(0).Captcha.ReloadImage();
		});
		
		$("#captchaBtnSound").click(function(event) {
			event.preventDefault();
			$("#answerData").get(0).Captcha.PlaySound();
		});
	
		$("a[data-role='banner']").on("click", function(){
 			var itemId = $(this).data("bannerId");
 			var itemUrl = $(this).data("bannerUrl");
 			var itemOption = $(this).data("bannerOption");
 			var windowName = $(this).data("bannerName");
			

 			$.ajax({
 				url : "/support/accesslog/createAccessLog.do",
 				data: {
 					"systemId" : "SO",
 					"itemId" : itemId
 				},
 				type : "post",
 				success : function(data){},
 				error : function(xhr){}
 			}); 			
 			if(itemOption == ""){
				var openNewWindow = window.open("about:blank");
				openNewWindow.location.href = itemUrl;	
			}else{
	 			spro.popupOpen(itemUrl,itemOption,windowName);
			}
 			
		});
		
	});
	
	goBanner = function(url, msg){
		var $form = $("#loginVerify");
		$("#bannerUrl").val(url);
		var htmlMsg = "";
		if(!isCertificated) {
			htmlMsg = "<span>인증번호 확인 후 <span style='color: #e31010; text-decoration: underline;'>"+msg+"</span></span>";				
			loginAlertMsg(htmlMsg);
			return false;
		}
		$form.submit();
		//location.href = "https://newstg.lglifecare.com/OpenLink/1174";	
	};
	
	loginAlertMsg = function(htmlMsg){
		$("#modalMsg").empty();
		$("#modalMsg").append(htmlMsg);			
		$("#divLoginAlertMsg").modal("show");
	} 
	
	
	/* var bannerMaxView = 1;
	var view = 0 
	changeBanner = function(){		
		if(view == bannerMaxView){
			view = 0	
		}else{
			view++;
		}
		$("div.login-banner a").hide();
		$("div.login-banner a:eq("+view+")").fadeIn();					
	}

	//배너 자동변경 타이머
	var timer = setInterval(function (){changeBanner()}, 5000); */

	
})(jQuery);

function newWindowOpen(url){
	window.open(url, "_blank");
}

</script>

